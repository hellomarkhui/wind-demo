/* pages/production/home/home.wxss */
scroll-view {
  display: block;
  width: 100%;
  box-sizing: content-box;
}
.sidebar {
  height: 100%;
  width: 150rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.tab-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 100rpx;
  position: relative;
  display: inline-block;
  line-height: 100rpx;
  font-size: 20rpx;
  padding: 0 20rpx;
}
.tab-cur {
  color: green;
  background-color: #f1f1f1;
}
.tab-cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}

scroll-view.content {
  background-color: #f1f1f1;
  height: 100%;
}
.content-item, .detail {
  padding: 0 30rpx 30rpx 30rpx;
}
.item-row {
  background-color: #fff;
  position: relative;
  display: flex;
  justify-content: flex-end;
  transition: all .6s ease-in-out 0s;
  transform: translateX(0rpx);
}
.row-img {
  font-variant: small-caps;
  left: 30rpx;
  top: 30rpx;
  display: inline-flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  background-color: #ccc;
  color: #fff;
  white-space: nowrap;
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  background-size: cover;
  background-position: center;
  vertical-align: middle;
  font-size: 1.5em;
  border-radius: 6rpx;
}
.row-txt {
  width: 100%;
  margin-left: 156rpx;
}
.cu-bar {
  display: flex;
  position: relative;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between; 
  background: #fff;
}
.txt-describe {
  min-height: 100rpx;
  padding-right: 30rpx;
}

.cu-card>.cu-item {
  margin: 0;
}