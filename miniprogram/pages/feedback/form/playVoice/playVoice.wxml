<!--pages/feedback/form/playVoice/playVoice.wxml-->
<view class="time">
  <view>总时长：{{formatedRecordTime}}</view>
  <view wx:if="{{playing}}">播放</view>
  <view wx:if="{{pause}}">暂停</view>
  <view wx:if="{{playing||pause}}">已播放：{{formatedPlayTime}}</view>
</view>
<view class="padding flex flex-direction">
  <button wx:if="{{!playing}}" class="cu-btn bg-green lg" bindtap="playVoice">播放录音</button>
  <button wx:if="{{playing}}" class="cu-btn bg-blue margin-top-sm lg" bindtap="pauseVoice">暂停播放</button>
  <button wx:if="{{playing}}" class="cu-btn bg-red margin-tb-sm lg" bindtap="stopVoice">停止播放</button>
</view>
