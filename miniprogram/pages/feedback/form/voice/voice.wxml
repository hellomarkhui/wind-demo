<view class="time">
  <view wx:if="{{recording}}">录音中</view>
  <view>{{formatedRecordTime}}</view>
</view>
<view class="padding flex flex-direction">
  <button wx:if="{{!recording && !hasRecord}}" class="cu-btn bg-green lg" bindtap="startRecord">开始录音</button>
  <button wx:if="{{recording}}" class="cu-btn bg-blue margin-top-sm lg" bindtap="stopRecord">结束录音</button>
  <button wx:if="{{hasRecord}}" class="cu-btn bg-red margin-tb-sm lg" bindtap="cancel">取消</button>
  <button wx:if="{{hasRecord}}" class="cu-btn bg-yellow margin-tb-sm lg" bindtap="confirm">确定</button>
</view>